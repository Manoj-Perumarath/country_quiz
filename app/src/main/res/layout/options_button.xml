<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="countryName"
            type="String" />

        <variable
            name="countryId"
            type="Integer" />

        <variable
            name="onOptionClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_options_default"
            android:onClick="@{ onOptionClick}"
            android:tag="@{String.valueOf(countryId)}"
            android:text="@{countryName}"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_answer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/btn_opt"
            app:layout_constraintStart_toStartOf="@+id/btn_opt"
            app:layout_constraintTop_toBottomOf="@+id/btn_opt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
